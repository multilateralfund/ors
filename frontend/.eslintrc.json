{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:perfectionist/recommended-natural",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["perfectionist", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": ["src/@types/theme.d.ts"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "perfectionist/sort-array-includes": "error",
    "perfectionist/sort-enums": "error",
    "perfectionist/sort-exports": "error",
    "perfectionist/sort-interfaces": "error",
    "perfectionist/sort-jsx-props": [
      "error",
      {
        "type": "natural",
        "order": "asc",
        "groups": [
          "id",
          "initial",
          "exit",
          "animate",
          "transition",
          "className",
          // "breakpoints",
          "unknown",
          "multiline",
          "callback",
          "shorthand"
        ],
        "custom-groups": {
          "id": ["key", "id", "name"],
          "initial": "initial",
          "exit": "exit",
          "animate": "animate",
          "transition": "transition",
          "className": "className",
          "breakpoints": ["xs", "sm", "md", "lg", "xl", "2xl"],
          "callback": "on*"
        }
      }
    ],
    "perfectionist/sort-imports": [
      "error",
      {
        "type": "natural",
        "order": "asc",
        "groups": [
          "server",
          [
            "type",
            "parent-type",
            "sibling-type",
            "index-type",
            "internal-type"
          ],
          "react",
          ["builtin", "external"],
          "config",
          "internal",
          ["parent", "sibling", "index"],
          "i18n",
          "side-effect",
          "icons",
          "files",
          "object",
          "unknown"
        ],
        "custom-groups": {
          "value": {
            "server": ["server-only"],
            "react": ["react", "react-*"],
            "icons": ["@react-icons/**"],
            "config": ["@ors/config", "@ors/config/**"],
            "i18n": ["@ors/i18n", "@ors/i18n/client", "@ors/i18n/settings"],
            "files": [
              "*.css",
              "*.png",
              "*.jpg",
              "*.jpeg",
              "*.json",
              "@ors/**/*.css",
              "@ors/**/*.png",
              "@ors/**/*.jpg",
              "@ors/**/*.jpeg",
              "@ors/**/*.json"
            ]
          },
          "type": {
            "react": ["react react-* next"]
          }
        },
        "internal-pattern": ["@ors/**", "~/**"],
        "newlines-between": "always"
      }
    ],
    "perfectionist/sort-named-exports": "error",
    "perfectionist/sort-named-imports": "error",
    "perfectionist/sort-object-types": "error",
    "perfectionist/sort-objects": [
      "error",
      {
        "type": "natural",
        "order": "asc",
        "partition-by-comment": false,
        "groups": ["id", "key", "unknown"],
        "custom-groups": {
          "id": "id",
          "key": "key"
        }
      }
    ],
    "perfectionist/sort-union-types": "error"
  }
}
